<_config:DataloadBusinessObjectConfiguration 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.ibm.com/xmlns/prod/commerce/foundation/config ../../../WC/xml/config/xsd/wc-dataload-businessobject.xsd" 
	xmlns:_config="http://www.ibm.com/xmlns/prod/commerce/foundation/config">

  <_config:DataLoader className="com.ibm.commerce.foundation.dataload.BusinessObjectLoader">
    <_config:DataReader className="com.ibm.commerce.foundation.dataload.datareader.UniqueIdReader" >
    	    <_config:Query>
    	      <_config:SQL>
	    	    <![CDATA[
    				SELECT COLLATERAL.COLLATERAL_ID, COLLDESC.LANGUAGE_ID
    				FROM COLLATERAL, COLLDESC
    				WHERE STOREENT_ID = ? AND COLLATERAL.COLLATERAL_ID = COLLDESC.COLLATERAL_ID
    				ORDER BY COLLATERAL.COLLATERAL_ID, COLLDESC.LANGUAGE_ID DESC
    		    ]]>
    	      </_config:SQL>
    	      <_config:Param name="storeId" valueFrom="BusinessContext" />
    	    </_config:Query>
    </_config:DataReader>

    <_config:BusinessObjectBuilder>
      <_config:BusinessObjectMediator className="com.ibm.commerce.foundation.dataload.businessobjectmediator.AssociatedObjectMediator" >
    	    <_config:Query>
    	      <_config:SQL>
    	    	<![CDATA[
					SELECT NAME, LOCATION, MARKETINGTEXT, LONGMKTGTEXT, LANGUAGE_ID, COLLDESC.FIELD1, COLLDESC.FIELD2
					FROM COLLATERAL, COLLDESC
					WHERE COLLATERAL.COLLATERAL_ID = ? AND COLLDESC.LANGUAGE_ID = ? AND COLLATERAL.COLLATERAL_ID = COLLDESC.COLLATERAL_ID
    	   		 ]]>
    	      </_config:SQL>
    	      <_config:Param name="COLLATERAL_ID" />
    	      <_config:Param name="LANGUAGE_ID" />
    	      
    	      <_config:ColumnMapping name="NAME" value="contentName" />
    	      <_config:ColumnMapping name="LOCATION" value="location" />
    	      <_config:ColumnMapping name="LONGMKTGTEXT" value="marketingText" >
							<_config:ValueHandler className="com.ibm.commerce.foundation.dataload.config.StringValueHandler" >
								<_config:Parameter name="replace" value="MARKETINGTEXT" />
							</_config:ValueHandler>
    	      </_config:ColumnMapping>
    	      <_config:ColumnMapping name="LANGUAGE_ID" value="langId" />
    	      <_config:ColumnMapping name="FIELD1" value="field1" />
    	      <_config:ColumnMapping name="FIELD2" value="field2" />
    	    </_config:Query>
        
   		<_config:DataWriter className="com.ibm.commerce.foundation.dataload.datawriter.CSVWriter">
      		<_config:Data>
	     		  <_config:column number="1" name="contentName" />
	      		<_config:column number="2" name="location" />
	      		<_config:column number="3" name="marketingText" />
	      		<_config:column number="4" name="langId" />
	      		<_config:column number="5" name="field1" />
	      		<_config:column number="6" name="field2" />
						<_config:column number="7" name="delete" value="0" />
	    	</_config:Data>
    	</_config:DataWriter>
      </_config:BusinessObjectMediator>
    </_config:BusinessObjectBuilder>

  </_config:DataLoader>

</_config:DataloadBusinessObjectConfiguration>
